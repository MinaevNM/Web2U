<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:textSize="40sp"
            android:text=""
            android:id="@+id/textView" android:layout_marginLeft="20dp" android:longClickable="false"
            android:linksClickable="false" android:layout_marginRight="20dp" android:layout_marginTop="40dp"
            android:gravity="center"/>

    <SeekBar
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar" android:layout_marginLeft="20dp" android:layout_gravity="center"
            android:layout_marginRight="20dp" android:layout_marginTop="40dp" android:clickable="false"
            android:focusable="false" android:focusableInTouchMode="false"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/textSpeed" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
            android:gravity="center"/>
</LinearLayout>

